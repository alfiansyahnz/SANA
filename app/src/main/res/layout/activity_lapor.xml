<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a0dac8b"
    tools:context=".feature.lapor.LaporActivity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/formulir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FORMULIR LAPOR LINGKUNGAN"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlueGreen"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="3dp"
            android:layout_height="4dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/file_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identitas"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="19dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_marginTop="11dp"
            android:paddingRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp"
            >

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/nm_lapor"
                android:layout_width="218dp"
                android:layout_height="23dp"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:textSize="12sp"
                android:textColor="@color/colorBlueGreen"
                android:background="@drawable/rectangle_shadow"
                />
        </TableRow>

        <TableRow android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:paddingRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelahiran"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tgl_lahir"
                android:layout_width="218dp"
                android:layout_height="23dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rectangle_shadow"
                android:textColor="@color/colorBlueGreen"
                android:textSize="12sp"/>
        </TableRow>

        <TableRow android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:paddingRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/alamat_lapor"
                android:layout_width="218dp"
                android:layout_height="54dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12sp"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlueGreen"
                android:background="@drawable/rectangle_shadow"
                />
        </TableRow>

        <TableRow android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor HP"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/tlp_lapor"
                android:layout_width="218dp"
                android:layout_height="23dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/rectangle_shadow"
                android:textSize="12sp"
                android:textColor="@color/colorBlueGreen"
                android:layout_gravity="center_vertical"
                android:inputType="number"/>
        </TableRow>

        <TableRow android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/email_lapor"
                android:layout_width="218dp"
                android:layout_height="23dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/rectangle_shadow"
                android:textSize="12sp"
                android:textColor="@color/colorBlueGreen"
                android:layout_gravity="center_vertical"/>
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaduan"
            android:layout_marginLeft="14dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TableRow android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:paddingRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Pengaduan"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tgl_pengaduan"
                android:layout_width="218dp"
                android:layout_height="23dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rectangle_shadow"
                android:textColor="@color/colorBlueGreen"
                android:textSize="12sp"/>
        </TableRow>

        <TableRow android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:paddingRight="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi Pengaduan"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/isi_lapor"
                android:layout_width="218dp"
                android:layout_height="209dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12sp"
                android:gravity="left"
                android:textColor="@color/colorBlueGreen"
                android:background="@drawable/rectangle_shadow"

                />
        </TableRow>

        <TableRow android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:paddingRight="15dp"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Kirim Bukti"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="218dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rectangle_shadow"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/colorBlueGreen"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_bukti"
                android:layout_width="48dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="15dp"
                android:text="Pilih File"
                android:textSize="8sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/file_button"
                android:textAllCaps="false"
                />
        </TableRow>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="35dp"
            android:textSize="12sp"
            android:text="Dengan ini saya menyatakan bahwa pengaduan ini adalah
                kejadian yang sebenarnya terjadi. Saya akan mematuhi peraturan yang berlaku."
            android:textColor="@color/colorBlack"
            android:layout_gravity="start"/>

        <TableRow android:baselineAligned="true"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            >

            <ProgressBar
                android:id="@+id/loading"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_lapor"
                android:layout_width="50dp"
                android:layout_height="42dp"
                android:background="@drawable/roundbutton"
                android:text="KIRIM"
                android:textColor="@color/colorWhite"/>
        </TableRow>
    </TableLayout>

</ScrollView>