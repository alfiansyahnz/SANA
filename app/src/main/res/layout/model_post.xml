<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_account_circle_black_36dp"
                android:layout_width="30dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/nameUser"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:text="Ujuy Maulana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/waktuPost"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="9dp"
                android:layout_marginTop="10dp"
                android:text="2 Jam yang lalu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="right|center_vertical"-->
<!--                android:paddingLeft="150dp"-->
<!--                app:srcCompat="@drawable/ic_more_horiz_black_24dp"-->
<!--                android:background="invisible"-->
<!--                />-->
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/postImg"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="360dp"
            android:layout_height="200dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:src="@drawable/ic_favorite_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_chat_bubble_outline_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_share_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/isiPost"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@android:color/black"
                    android:text="Menjadi relawan tidak seperti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_account_circle_black_36dp"
                />
            <TextView
                android:id="@+id/komentarPost"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:hint=" Add a comment..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>