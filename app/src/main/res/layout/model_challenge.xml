<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center_horizontal"
    android:id="@+id/bg_challenge">

    <android.support.v7.widget.CardView

        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/back_challenge"

            >

            <ImageView
                android:layout_width="112dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/img_challenge"
                android:src="@drawable/hiu"
                android:transitionName="@string/transition_image"
                />

            <TextView
                android:id="@+id/tv_gabung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginRight="8dp"
                android:textColor="#f9ca24"
                android:lineSpacingExtra="11sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/product_sans_reguler"
                android:layout_alignParentRight="true"
                android:text="300 orang bergabung"
                />

            <TextView
                android:id="@+id/tv_challenge_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/product_sans_bold"
                android:textColor="#ffffff"
                android:lineSpacingExtra="3sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:minLines="2"
                android:maxLines="2"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/img_challenge"
                android:layout_below="@id/tv_gabung"
                android:text="Beasiswa Film Pendek: Kampanye
&apos;Beli yang Baik&apos;"
                />
            <TextView
                android:id="@+id/tv_challenge_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textColor="#ffffff"
                android:layout_below="@id/tv_challenge_judul"
                android:layout_toRightOf="@id/img_challenge"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:lineSpacingExtra="6sp"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:text="Buat ide ceritamu tentang film kampanye &apos;Beli yang Baik&apos; dan dapatkan Beasiswa "
                />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/img_like"
                android:src="@drawable/ic_suka"
                android:layout_toRightOf="@id/img_challenge"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_challenge_desc"
                />

            <TextView
                android:id="@+id/tv_suka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_desc"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/img_like"
                android:fontFamily="@font/product_sans_bold"
                android:text="21"
                android:textColor="#f9ca24"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="16dp"
                android:id="@+id/img_bagi"
                android:layout_height="16dp"
                android:src="@drawable/ic_bagi"
                android:layout_toRightOf="@id/tv_suka"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_challenge_desc"
                />

            <TextView
                android:id="@+id/tv_bagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challenge_desc"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@id/img_bagi"
                android:fontFamily="@font/product_sans_bold"
                android:text="10"
                android:textColor="#f9ca24"
                android:textSize="12dp" />


            <Button
                android:layout_marginTop="8dp"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textAllCaps="false"
                android:text="Selengkapnya"
                android:id="@+id/cl_selengkapnya"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_round_challenge"
                android:layout_marginRight="8dp"
                android:textSize="10dp"
                android:layout_below="@id/tv_challenge_desc"
                />

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>