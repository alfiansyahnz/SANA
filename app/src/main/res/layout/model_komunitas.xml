<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:gravity="center_horizontal"
    android:id="@+id/bg_komunitas">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view1"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="3dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:id="@+id/komunitas_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/img_komunitas"
                android:src="@drawable/tangantanah"
                />

            <TextView
                android:id="@+id/nama_komunitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#000"
                android:lineSpacingExtra="3sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:minLines="1"
                android:maxLines="2"
                android:textStyle="bold"
                android:layout_toRightOf="@id/img_komunitas"
                android:text="Gerakan Seribu Pohon" />
            <TextView
                android:id="@+id/nama_admintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#a8a8a8"
                android:layout_below="@id/nama_komunitas"
                android:layout_toRightOf="@id/img_komunitas"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:lineSpacingExtra="6sp"
                android:maxLines="2"
                android:minLines="1"
                android:ellipsize="end"
                android:text="Admin: "
                />
            <TextView
                android:id="@+id/nama_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#a8a8a8"
                android:layout_below="@id/nama_komunitas"
                android:layout_toRightOf="@id/nama_admintext"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:lineSpacingExtra="6sp"
                android:maxLines="2"
                android:minLines="1"
                android:ellipsize="end"
                android:text="Sekar Ayu R."
                />
            <TextView
                android:id="@+id/jml_anggota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#a8a8a8"
                android:layout_below="@id/nama_admin"
                android:layout_toRightOf="@id/img_komunitas"
                android:layout_marginTop="4dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="3dp"
                android:lineSpacingExtra="6sp"
                android:maxLines="2"
                android:minLines="1"
                android:ellipsize="end"
                android:text="1028"
                />
            <TextView
                android:id="@+id/jml_anggotatext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#a8a8a8"
                android:layout_below="@id/nama_admin"
                android:layout_toRightOf="@id/jml_anggota"
                android:layout_marginTop="3.9dp"
                android:lineSpacingExtra="100dp"
                android:maxLines="2"
                android:minLines="1"
                android:ellipsize="end"
                android:text="Anggota"
                />

            <Button
                android:id="@+id/btn_bergabung"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/nama_admin"
                android:paddingHorizontal="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rounded_rectangle_orange"
                android:text="Bergabung"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="10dp"
                android:minWidth="15dp"
                android:textStyle="normal" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>