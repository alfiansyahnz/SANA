<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a0dac8b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_volunteer_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/product_sans_bold"
            android:maxLines="2"
            android:text="Judul"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_volunteer_lokasi"
            style="@style/TextContent.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#707070"
            android:lineSpacingExtra="8sp"
            android:text="Taman Kota"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_fanny" />

            <TextView
                android:id="@+id/tv_volunteer_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_point"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/iv_point"
                android:text="50 point"
                android:fontFamily="@font/product_sans_bold"
                android:textColor="#f9ca24"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_gabung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/tv_volunteer_user"
                android:src="@drawable/ic_gabung" />

            <TextView
                android:id="@+id/tv_volunteer_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_gabung"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/img_gabung"
                android:fontFamily="@font/product_sans_bold"
                android:text="234"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/tv_volunteer_join"
                android:src="@drawable/ic_waktu" />

            <TextView
                android:id="@+id/tv_volunteer_hari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_waktu"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/img_waktu"
                android:fontFamily="@font/product_sans_bold"
                android:text="5 hari"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_volunteer_user">
                <ImageView
                    style="@style/TextContent.Subtitle"
                    android:id="@+id/img_kalender"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kalendar" />

                <TextView
                    android:id="@+id/tv_volunteer_tanggal"
                    style="@style/TextContent.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/img_kalender"
                    android:layout_toRightOf="@id/img_kalender"
                    android:lineSpacingExtra="8sp"
                    android:text="Senin 22 Agutus 2019 pukul 09.00 - 20.00 WIB "
                    android:textColor="#707070"
                    android:textSize="12sp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/desk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_point"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/product_sans_bold"
                android:lineSpacingMultiplier="1"
                android:text="Deskripsi "
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_volunteer_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desk"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="4dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:fontFamily="@font/product_sans_reguler"
                android:lineSpacingExtra="8sp"
                android:text="@string/deskripsi"
                android:textColor="#b4b3b3"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_volunteer_deskripsi"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/product_sans_bold"
                android:text="Komentar"
                android:textColor="#000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_lihat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_volunteer_deskripsi"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:background="@null"
                android:fontFamily="@font/product_sans_bold"
                android:text="Lihat Semua"
                android:textAllCaps="false"
                android:textColor="#0dac8b"
                android:textSize="14dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bg_komentar"
            android:layout_width="312dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_komentar">

            <ImageView
                android:id="@+id/img_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/img_profil" />

            <TextView
                android:id="@+id/tv_namaprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/img_profil"
                android:fontFamily="@font/product_sans_bold"
                android:text="Nama"
                android:textColor="#707070"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_donasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_namaprofil"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/img_profil"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Rp 1000.000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_donasi"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/product_sans_reguler"
                android:lineSpacingExtra="8sp"
                android:text="Saya mengikuti challenge ini sebagai upaya kepedulian untuk kelestarian bumi"
                android:textColor="#b4b3b3"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="312dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="75dp"
            >


            <ImageView
                android:id="@+id/img_profil_komentar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_profil" />

            <LinearLayout
                android:id="@+id/bg_tulis_komentar"
                android:layout_width="236dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="75dp"
                android:layout_toRightOf="@id/img_profil_komentar"
                android:background="@drawable/bg_tulis_komentar">

                <EditText
                    android:id="@+id/edt_tulis_komentar"
                    android:layout_width="184dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:hint="Berikan Komentar ..."
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:onClick="photo"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_photo" />



            </LinearLayout>

            <ImageView
                android:id="@+id/img_kirim"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@id/bg_tulis_komentar"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:onClick="kirim"
                android:src="@drawable/ic_kirim" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_volunteer"
            style="@style/ButtonGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_challenge"
            android:text="Ikut"
            />
    </LinearLayout>
</ScrollView>


