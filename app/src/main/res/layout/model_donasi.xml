    <ImageView

        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:id="@+id/iv_foto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_setengah_round_donasi"
        android:layout_marginBottom="8dp"
        />


    <!--</android.support.v7.widget.CardView>-->

    <android.support.v7.widget.CardView

        android:layout_alignParentRight="true"
        android:id="@+id/card_donasi"
        android:layout_width="match_parent"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_setengah_round_donasi"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >

            <TextView
                android:id="@+id/tv_judul_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/product_sans_bold"
                android:lineSpacingExtra="3sp"
                android:maxLines="2"
                android:minLines="2"
                android:text="Beasiswa Film Pendek: Kampanye
&apos;Beli yang Baik&apos;"
                android:textColor="#000"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_detail_hari_donasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textColor="#b4b3b3"
                android:layout_below="@id/tv_judul_list"
                android:layout_marginLeft="12dp"
                android:lineSpacingExtra="6sp"
                android:maxLines="1"
                android:minLines="1"
                android:text="4"
                />

            <TextView
                android:id="@+id/tv_hari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textColor="#b4b3b3"
                android:layout_below="@id/tv_judul_list"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="6sp"
                android:maxLines="1"
                android:minLines="1"
                android:layout_toRightOf="@+id/tv_detail_hari_donasi"
                android:text="hari"
                />

            <TextView
                android:id="@+id/tv_hari_lagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textColor="#b4b3b3"
                android:layout_below="@id/tv_judul_list"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="6sp"
                android:layout_toRightOf="@id/tv_hari"
                android:maxLines="1"
                android:minLines="1"
                android:text="lagi"
                />

            <TextView
                android:id="@+id/tv_batas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textColor="#b4b3b3"
                android:layout_below="@id/tv_judul_list"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="6sp"
                android:layout_toRightOf="@id/tv_hari_lagi"
                android:maxLines="1"
                android:minLines="1"
                android:text="|"
                />

            <TextView
                android:id="@+id/tv_orang_baik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textColor="#b4b3b3"
                android:layout_below="@id/tv_judul_list"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="6sp"
                android:layout_toRightOf="@id/tv_batas"
                android:maxLines="1"
                android:minLines="1"
                android:text="120"
                />

            <TextView
                android:id="@+id/tv_orang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textColor="#b4b3b3"
                android:layout_below="@id/tv_judul_list"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="6sp"
                android:layout_toRightOf="@id/tv_orang_baik"
                android:maxLines="1"
                android:minLines="1"
                android:text="orang"
                />

            <TextView
                android:id="@+id/tv_baik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/product_sans_reguler"
                android:textColor="#b4b3b3"
                android:layout_below="@id/tv_judul_list"
                android:layout_marginLeft="4dp"
                android:lineSpacingExtra="6sp"
                android:layout_toRightOf="@id/tv_orang"
                android:maxLines="1"
                android:minLines="1"
                android:text="baik"
                />

