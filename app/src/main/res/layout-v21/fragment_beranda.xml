<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linearLayout1_beranda"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:orientation="vertical"
            android:background="@drawable/ic_bg_beranda">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarberanda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="36dp"
                    android:src="@drawable/logo1"/>
            </android.support.v7.widget.Toolbar>

            <SearchView
                style="@style/TextContent.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:elevation="10dp"
                android:iconifiedByDefault="false"
                android:queryHint="Pencarian SANA" />

        </LinearLayout>
        <TextView
            style="@style/TextContent.Subtitle"
            android:id="@+id/tv_donasi_lingkungan"
            android:layout_below="@id/linearLayout1_beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:lineSpacingExtra="3sp"
            android:text="Donasi Lingkungan"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_beranda"
            style="@style/TextContent.Subtitle"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_below="@id/tv_donasi_lingkungan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_fitursana"
            style="@style/TextContent.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_beranda"
            android:textSize="14sp"
            android:textColor="#000000"
            android:lineSpacingExtra="3sp"
            android:text="Fitur SANA"
            />

        <RelativeLayout
            android:id="@+id/relativelayout_1"
            style="@style/TextContent.Subtitle"
            android:layout_below="@id/tv_fitursana"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            android:background="@color/colorBlueGreen">

            <LinearLayout
                android:id="@+id/linearLayout2_beranda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_margin="11dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_donasi"
                    />

                <ImageButton
                    android:layout_margin="11dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_challenge"
                    />


                <ImageButton
                    android:layout_margin="11dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_event"
                    />


                <ImageButton
                    android:layout_margin="11dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_lapor"
                    />


                <ImageButton
                    android:layout_margin="11dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_berita"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_below="@id/linearLayout2_beranda"
                android:id="@+id/linearLayout3_beranda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="3sp"
                    android:textAlignment="center"
                    android:text="Donasi"
                    />

                <TextView
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:lineSpacingExtra="3sp"
                    android:text="Challenge"
                    />

                <TextView
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:lineSpacingExtra="3sp"
                    android:text="Event"
                    />

                <TextView
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:lineSpacingExtra="3sp"
                    android:text="Lapor "
                    />

                <TextView
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:lineSpacingExtra="3sp"
                    android:text="Berita"
                    />


            </LinearLayout>


        </RelativeLayout>

        <TextView
            style="@style/TextContent.Subtitle"
            android:id="@+id/tv_highlight"
            android:layout_below="@id/relativelayout_1"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:lineSpacingExtra="3sp"
            android:text="Highlight"
            />


        <LinearLayout
            android:id="@+id/linearLayout4_beranda"
            android:layout_below="@id/tv_highlight"
            android:layout_width="306dp"
            android:layout_height="181dp"
            android:orientation="vertical"
            android:background="@color/colorblue">

            <TextView
                style="@style/TextContent.Subtitle"
                android:textColor="@color/colorWhite"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donasi"/>

            <TextView
                style="@style/TextContent.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="3sp"
                android:textStyle="bold"
                android:text="Donasikan uangmu untuk kepedulian terhadap
            lingkungan baik flora maupunfauna di bumi tercinta."/>

            <Button
                style="@style/ButtonGeneral"
                android:layout_width="104dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorWhite"
                android:background="@drawable/bg_round"
                android:text="Daftar"
                android:textColor="@color/colorBlueGreen"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout5_beranda"
            android:layout_below="@id/linearLayout4_beranda"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="110dp"
            android:layout_width="308dp"
            android:layout_height="181dp"
            android:orientation="vertical"
            android:background="@color/colorYellow">

            <TextView
                style="@style/TextContent.Subtitle"
                android:textColor="@color/colorWhite"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volunteer"/>

            <TextView
                style="@style/TextContent.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="3sp"
                android:textStyle="bold"
                android:text="Menjadi relawan di berbagai kegiatan atau organisasi sosial merpakan salah satu
            pilihan bagikamu yang ingin berbuat lebih secara langsung untuk sesama."/>

            <Button
                style="@style/ButtonGeneral"
                android:layout_width="104dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorWhite"
                android:background="@drawable/bg_round"
                android:text="ikut"
                android:textColor="@color/colorYellow"/>



        </LinearLayout>

        <TextView
            style="@style/TextContent.Subtitle"
            android:id="@+id/tv_berita"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@id/linearLayout5_beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:lineSpacingExtra="3sp"
            android:text="Berita"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_beritaberanda"
            style="@style/TextContent.Subtitle"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_below="@id/tv_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </RelativeLayout>


</ScrollView>